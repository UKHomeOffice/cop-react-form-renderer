{
  "name": "@ukhomeoffice/cop-react-form-renderer",
  "version": "1.0.0-gamma",
  "private": false,
  "scripts": {
    "clean": "rimraf dist",
    "test": "react-scripts test",
    "lint": "eslint --ext .js,.jsx src",
    "storybook:start": "start-storybook --docs --no-manager-cache -p 6007",
    "storybook:build": "build-storybook --docs -s src/assets",
    "storybook:deploy": "yarn deploy-storybook",
    "storybook": "yarn storybook:start",
    "deploy-storybook": "storybook-to-ghpages -e storybook-static",
    "compile": "yarn clean && cross-env NODE_ENV=production babel src --out-dir dist --copy-files && yarn post-compile",
    "post-compile": "rimraf dist/**/*.test.* dist/**/*.stories.* dist/json dist/assets"
  },
  "dependencies": {
    "@ukhomeoffice/cop-react-components": "^0.6.0",
    "axios": "^0.21.1",
    "govuk-frontend": "^3.13.0",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.4",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "@monaco-editor/react": "^4.3.1",
    "@storybook/addon-a11y": "^6.3.8",
    "@storybook/addon-actions": "^6.3.8",
    "@storybook/addon-docs": "^6.3.8",
    "@storybook/addon-essentials": "^6.3.8",
    "@storybook/addon-knobs": "^6.3.1",
    "@storybook/addon-links": "^6.3.8",
    "@storybook/node-logger": "^6.3.8",
    "@storybook/preset-create-react-app": "^3.2.0",
    "@storybook/react": "^6.3.8",
    "@storybook/storybook-deployer": "^2.8.10",
    "@storybook/theming": "^6.3.8",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^12.1.10",
    "axios-mock-adapter": "^1.18.1",
    "cross-env": "^7.0.3",
    "html-react-parser": "^0.10.5",
    "node-sass": "^6.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "storybook-addon-mock": "^2.0.1"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3"
  },
  "optionalDependencies": {
    "babel-loader": "8.1.0",
    "webpack": "4.44.2"
  },
  "main": "dist/index.js",
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/UKHomeOffice/cop-react-form-renderer"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [ "**/*.stories.*" ],
        "rules": { "import/no-anonymous-default-export": "off" }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
